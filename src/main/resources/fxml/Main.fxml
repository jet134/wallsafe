<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="contentArea" alignment="CENTER" hgap="12.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="420.0" prefWidth="540.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.kennyhei.wallsafe.controller.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <children>
        <!-- Change interval -->
        <CheckBox fx:id="changeIntervalCheckBox" mnemonicParsing="false" selected="true" text="Change wallpaper every" GridPane.rowIndex="0" />
        <TextField fx:id="changeIntervalTextField" text="60" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <ComboBox fx:id="changeIntervalComboBox" prefWidth="140.0" value="seconds" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="seconds" />
                    <String fx:value="minutes" />
                    <String fx:value="hours" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Download interval -->
        <CheckBox fx:id="downloadIntervalCheckBox" mnemonicParsing="false" selected="true" text="Download wallpaper every" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="downloadIntervalTextField" maxWidth="-Infinity" prefHeight="31.0" prefWidth="100.0" text="60" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <ComboBox fx:id="downloadIntervalComboBox" prefWidth="140.0" value="seconds" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="seconds" />
                    <String fx:value="minutes" />
                    <String fx:value="hours" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Set resolution -->
        <Label text="Set resolution:" GridPane.rowIndex="2" />
        <ComboBox fx:id="resolutionComboBox" prefWidth="140.0" promptText="Choose" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1024x768" />
                    <String fx:value="1280x800" />
                    <String fx:value="1280x960" />
                    <String fx:value="1440x900" />
                    <String fx:value="1600x900" />
                    <String fx:value="1280x1024" />
                    <String fx:value="1600x1200" />
                    <String fx:value="1920x1080" />
                    <String fx:value="1920x1200" />
                    <String fx:value="2560x1440" />
                    <String fx:value="2560x1600" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Set download folder -->
        <Label text="Set download folder:" GridPane.rowIndex="3" />
        <Button fx:id="chooseDirectoryButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="232.0" text="Choose directory..." GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />

        <!-- Keywords listview and buttons -->
        <Label text="Keywords" GridPane.rowIndex="4">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>

        <ListView fx:id="keywordsListView" editable="true" prefHeight="210.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.rowSpan="3" />

        <Button fx:id="addKeywordButton" mnemonicParsing="false" prefWidth="100.0" text="Add" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button fx:id="removeKeywordButton" mnemonicParsing="false" prefWidth="100.0" text="Remove" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="6" />
    </children>

    <columnConstraints>
        <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="96.0" prefWidth="214.0" />
        <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="2.0" prefWidth="42.0" />
        <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="174.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="30.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="30.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" />
        <RowConstraints maxHeight="33.0" minHeight="33.0" prefHeight="33.0" />
        <RowConstraints maxHeight="33.0" minHeight="33.0" prefHeight="33.0" />
        <RowConstraints maxHeight="33.0" minHeight="33.0" prefHeight="33.0" />
    </rowConstraints>
</GridPane>
